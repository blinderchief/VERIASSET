# Environment Configuration for VeriAssets Backend
# Copy this file to .env and fill in your values

# Application Settings
APP_ENV=development
APP_DEBUG=true
APP_SECRET_KEY=your-super-secret-key-change-in-production
APP_HOST=0.0.0.0
APP_PORT=8000

# Database (Neon Serverless Postgres)
DATABASE_URL=postgresql+asyncpg://username:password@ep-example-123456.us-east-2.aws.neon.tech/veriassets?sslmode=require
DATABASE_SYNC_URL=postgresql://username:password@ep-example-123456.us-east-2.aws.neon.tech/veriassets?sslmode=require

# Clerk Authentication
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_WEBHOOK_SECRET=whsec_xxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_JWT_ISSUER=https://your-clerk-domain.clerk.accounts.dev

# Google Gemini AI
GEMINI_API_KEY=your-gemini-api-key
GEMINI_MODEL=gemini-1.5-flash

# Qubic Network Configuration
QUBIC_RPC_URL=https://rpc.qubic.org
QUBIC_TESTNET_RPC_URL=https://testnet-rpc.qubic.org
QUBIC_NETWORK=testnet
QUBIC_CONTRACT_INDEX=1

# Redis (for caching and Celery)
REDIS_URL=redis://localhost:6379/0

# AWS S3 (for file storage)
AWS_ACCESS_KEY_ID=your-aws-access-key
AWS_SECRET_ACCESS_KEY=your-aws-secret-key
AWS_S3_BUCKET=veriassets-uploads
AWS_REGION=us-east-1

# EasyConnect Webhook
EASYCONNECT_WEBHOOK_URL=https://hook.us1.make.com/your-webhook-id
EASYCONNECT_SECRET=your-easyconnect-secret

# CORS Origins
CORS_ORIGINS=["http://localhost:3000", "https://veriassets.vercel.app"]

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60

# Logging
LOG_LEVEL=INFO
