# VeriAssets Environment Variables
# Copy this file to .env and fill in your values

# ===================
# Database (Neon)
# ===================
DATABASE_URL=postgresql+asyncpg://user:password@host/database?sslmode=require

# ===================
# Authentication (Clerk)
# ===================
CLERK_SECRET_KEY=sk_test_your_key_here
CLERK_PUBLISHABLE_KEY=pk_test_your_key_here

# ===================
# AI Verification (Google Gemini)
# ===================
GEMINI_API_KEY=your_gemini_api_key

# ===================
# Qubic Network
# ===================
QUBIC_RPC_URL=https://rpc.qubic.org
QUBIC_TESTNET_RPC_URL=https://testnet-rpc.qubic.org

# ===================
# Redis (Caching)
# ===================
REDIS_URL=redis://localhost:6379

# ===================
# EasyConnect Webhooks
# ===================
EASYCONNECT_WEBHOOK_URL=https://hook.us1.make.com/your_webhook
EASYCONNECT_SECRET_KEY=your_webhook_secret

# ===================
# AWS S3 (Document Storage)
# ===================
AWS_ACCESS_KEY_ID=your_aws_key
AWS_SECRET_ACCESS_KEY=your_aws_secret
AWS_S3_BUCKET=veriassets-documents
AWS_REGION=us-east-1

# ===================
# Application
# ===================
ENVIRONMENT=development
DEBUG=true

# ===================
# Frontend URLs (for Clerk)
# ===================
NEXT_PUBLIC_API_URL=http://localhost:8000
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=pk_test_your_key_here
